        box-sizing: border-box;
        font-family: 'Rubik', sans-serif;
    }

    .recipe-form-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
        direction: rtl;
    }

    h2 {
        text-align: center;
        color: #414833;
        font-size: 2.5rem;
        margin-bottom: 30px;
    }

    .form-card {
        background: rgba(235, 227, 210, 0.95);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 15px 40px rgba(65, 72, 51, 0.15);
        border: 2px solid rgba(164, 172, 134, 0.3);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        color: #414833;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 1.1rem;
    }

    /* הפיכת כל התיבות לאחידות ב-100% */
