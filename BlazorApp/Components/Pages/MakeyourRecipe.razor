    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        justify-content: center;
    }

    .btn-save, .btn-back {
        padding: 15px 40px;
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
