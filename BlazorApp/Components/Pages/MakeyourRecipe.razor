@code {
    List<string> Ingredients = new List<string>();
    List<string> AddedIngredientNames = new List<string>();
    List<RecipeIngredientModel> RecipeIngredients = new List<RecipeIngredientModel>();

    string RecipeName = "";
    string Story = "";
    string Instructions = "";
    string ImageBase64 = "";
    string SelectedIngredient = "";
    string AmountInput = "";
    string Size = "";
    string NewIngredientName = "";
    string searchTerm = "";
    string ErrorMessage = "";

    bool AddingNew = false;
    bool IsSaving = false;
    bool showSuccessToast = false;
    int CurrentUserID = 0;

    protected override async Task OnInitializedAsync()
    {
        ProtectedBrowserStorageResult<int> resultID = await Session.GetAsync<int>("customerid");

        if (!resultID.Success || resultID.Value <= 0)
        {
            Navigation.NavigateTo("/Login");
            return;
        }

        CurrentUserID = resultID.Value;

        IngredientDB db = new IngredientDB();
        List<Ingredient> list = await db.GetAllAsync();

        if (list != null)
        {
            for (int i = 0; i < list.Count; i++)
            {
                Ingredients.Add(list[i].IngredientName);
            }
        }
    }

    List<string> GetFilteredIngredients()
    {
        List<string> filtered = new List<string>();

        for (int i = 0; i < Ingredients.Count; i++)
        {
            bool alreadyAdded = false;
            for (int j = 0; j < AddedIngredientNames.Count; j++)
            {
                if (Ingredients[i] == AddedIngredientNames[j])
                {
                    alreadyAdded = true;
                    break;
                }
            }

            if (!alreadyAdded)
            {
                if (string.IsNullOrWhiteSpace(searchTerm) ||
                    Ingredients[i].Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                {
                    filtered.Add(Ingredients[i]);
                }
            }
        }

        return filtered;
    }

    async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        try
        {
            IBrowserFile file = e.File;
            long maxFileSize = 5 * 1024 * 1024;

            if (file.Size > maxFileSize)
            {
                ErrorMessage = "הקובץ גדול מדי. מקסימום 5MB";
                return;
            }

            using System.IO.Stream stream = file.OpenReadStream(maxFileSize);
            using System.IO.MemoryStream ms = new System.IO.MemoryStream();
            await stream.CopyToAsync(ms);
            byte[] buffer = ms.ToArray();

            string base64 = Convert.ToBase64String(buffer);
            ImageBase64 = $"data:{file.ContentType};base64,{base64}";

            ErrorMessage = "";
        }
        catch (Exception ex)
        {
            ErrorMessage = $"שגיאה בהעלאת התמונה: {ex.Message}";
        }
    }

    void ShowAddIngredient()
    {
        AddingNew = true;
    }

    void CancelAddNew()
    {
        AddingNew = false;
        NewIngredientName = "";
    }

    async Task SaveNewIngredient()
    {
        ErrorMessage = "";

        if (string.IsNullOrWhiteSpace(NewIngredientName))
        {
            ErrorMessage = "נא להזין שם רכיב";
            return;
        }

        try
        {
            IngredientDB db = new IngredientDB();
            Ingredient item = new Ingredient();
            item.IngredientName = NewIngredientName.Trim();
            Ingredient result = await db.InsertGetObjAsync(item);

            Ingredients.Add(NewIngredientName.Trim());
            SelectedIngredient = NewIngredientName.Trim();
            NewIngredientName = "";
            AddingNew = false;
        }
        catch (Exception ex)
        {
            ErrorMessage = $"שגיאה בשמירת הרכיב: {ex.Message}";
        }
    }

    void AddToList()
    {
        ErrorMessage = "";

        if (string.IsNullOrWhiteSpace(SelectedIngredient))
        {
            ErrorMessage = "נא לבחור רכיב";
            return;
        }

        if (string.IsNullOrWhiteSpace(AmountInput))
        {
            ErrorMessage = "נא להזין כמות";
            return;
        }

        double amount;
        if (!double.TryParse(AmountInput, out amount) || amount <= 0)
        {
            ErrorMessage = "נא להזין כמות תקינה (למשל: 0.5, 1, 2.5)";
            return;
        }

        if (string.IsNullOrWhiteSpace(Size))
        {
            ErrorMessage = "נא להזין יחידה";
            return;
        }

        RecipeIngredientModel model = new RecipeIngredientModel();
        model.Name = SelectedIngredient;
        model.Amount = amount;
        model.Size = Size;
        RecipeIngredients.Add(model);
        AddedIngredientNames.Add(SelectedIngredient);

        SelectedIngredient = "";
        AmountInput = "";
        Size = "";
        searchTerm = "";
    }

    void RemoveIngredient(int index)
    {
        if (index >= 0 && index < RecipeIngredients.Count)
        {
            string ingredientName = RecipeIngredients[index].Name;
            RecipeIngredients.RemoveAt(index);

            for (int i = 0; i < AddedIngredientNames.Count; i++)
            {
                if (AddedIngredientNames[i] == ingredientName)
                {
                    AddedIngredientNames.RemoveAt(i);
                    break;
                }
            }
        }
    }

    async Task SaveRecipe()
    {
        ErrorMessage = "";
        showSuccessToast = false;

        if (string.IsNullOrWhiteSpace(RecipeName))
        {
            ErrorMessage = "נא להזין שם מתכון";
            return;
        }

        if (RecipeIngredients.Count == 0)
        {
            ErrorMessage = "נא להוסיף לפחות רכיב אחד";
            return;
        }

        IsSaving = true;

        try
        {
            RecipeDB db = new RecipeDB();
            Recipes newRecipe = new Recipes();
            newRecipe.UserID = CurrentUserID;
            newRecipe.Name = RecipeName.Trim();
            newRecipe.Story = Story?.Trim();
            newRecipe.RecipeInstructions = Instructions?.Trim();
            newRecipe.ImageURL = ImageBase64;

            Recipes insertedRecipe = await db.InsertGetObjAsync(newRecipe);

            if (insertedRecipe == null || insertedRecipe.RecipeID <= 0)
            {
                ErrorMessage = "שגיאה בשמירת המתכון";
                return;
            }

            RecipeIngredientDB ingredientDb = new RecipeIngredientDB();
            IngredientDB ingDB = new IngredientDB();

            for (int i = 0; i < RecipeIngredients.Count; i++)
            {
                List<Ingredient> ingredientsList = await ingDB.SearchIngredientsByNameAsync(RecipeIngredients[i].Name);

                if (ingredientsList != null && ingredientsList.Count > 0)
                {
                    Ingredient ing = ingredientsList[0];

                    RecipeIngredient ri = new RecipeIngredient();
                    ri.RecipeID = insertedRecipe.RecipeID;
                    ri.IngredientID = ing.IngredientID;
                    ri.Quantity = RecipeIngredients[i].Amount;
                    ri.Size = RecipeIngredients[i].Size;

                    int insertResult = await ingredientDb.InsertAsync(ri);
                }
            }

            showSuccessToast = true;
            StateHasChanged();

            await Task.Delay(3000);
            showSuccessToast = false;

            RecipeName = "";
            Story = "";
            Instructions = "";
            ImageBase64 = "";
            RecipeIngredients.Clear();
            AddedIngredientNames.Clear();
            SelectedIngredient = "";
