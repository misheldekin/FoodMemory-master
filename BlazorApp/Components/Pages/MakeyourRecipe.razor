@code {
    List<string> Ingredients = new List<string>();
    string RecipeName = "";
    string Story = "";
    string Instructions = "";
    string ImageBase64 = "";
    string SelectedIngredient = "";
    double Amount = 0;
    string Size = "";
    List<RecipeIngredientModel> RecipeIngredients = new List<RecipeIngredientModel>();
    bool AddingNew = false;
    string NewIngredientName = "";
    int CurrentUserID = 0;
    bool IsSaving = false;
    string ErrorMessage = "";
    string SuccessMessage = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                ProtectedBrowserStorageResult<int> resultID = await Session.GetAsync<int>("customerid");

                if (!resultID.Success || resultID.Value <= 0)
                {
                    navigationManager.NavigateTo("/Login");
                    return;
                }

                CurrentUserID = resultID.Value;

                IngredientDB db = new IngredientDB();
                List<Ingredient> list = await db.GetAllAsync();

                if (list != null)
                {
                    for (int i = 0; i < list.Count; i++)
                    {
                        Ingredients.Add(list[i].IngredientName);
                    }
                    StateHasChanged();
                }
            }
            catch (Exception ex)
            {
                ErrorMessage = $"שגיאה בטעינת הנתונים: {ex.Message}";
                StateHasChanged();
            }
        }
    }

    async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        try
        {
            IBrowserFile file = e.File;
            long maxFileSize = 5 * 1024 * 1024;

            if (file.Size > maxFileSize)
            {
                ErrorMessage = "הקובץ גדול מדי. מקסימום 5MB";
                return;
            }

            System.IO.Stream stream = file.OpenReadStream(maxFileSize);
            System.IO.MemoryStream ms = new System.IO.MemoryStream();
            await stream.CopyToAsync(ms);
            byte[] buffer = ms.ToArray();

            string base64 = Convert.ToBase64String(buffer);
            ImageBase64 = $"data:{file.ContentType};base64,{base64}";

            ErrorMessage = "";
            SuccessMessage = "התמונה הועלתה בהצלחה!";
        }
        catch (Exception ex)
        {
            ErrorMessage = $"שגיאה בהעלאת התמונה: {ex.Message}";
        }
    }

    void ShowAddIngredient()
    {
        AddingNew = true;
    }

    async Task SaveNewIngredient()
    {
        ErrorMessage = "";
        SuccessMessage = "";

        if (string.IsNullOrWhiteSpace(NewIngredientName))
        {
            ErrorMessage = "נא להזין שם רכיב";
            return;
        }

        try
        {
            IngredientDB db = new IngredientDB();
            Ingredient item = new Ingredient();
            item.IngredientName = NewIngredientName.Trim();

            Ingredient result = await db.InsertGetObjAsync(item);

            Ingredients.Add(item.IngredientName);
            SelectedIngredient = item.IngredientName;
            NewIngredientName = "";
            AddingNew = false;
            SuccessMessage = "רכיב נוסף בהצלחה!";
        }
        catch (Exception ex)
        {
            ErrorMessage = $"שגיאה בשמירת הרכיב: {ex.Message}";
        }
    }

    void AddToList()
    {
        ErrorMessage = "";
        if (string.IsNullOrWhiteSpace(SelectedIngredient) || Amount <= 0 || string.IsNullOrWhiteSpace(Size))
        {
            ErrorMessage = "נא למלא את כל פרטי הרכיב (שם, כמות ומידה)";
            return;
        }

        RecipeIngredientModel model = new RecipeIngredientModel();
        model.Name = SelectedIngredient;
        model.Amount = Amount;
        model.Size = Size;

        RecipeIngredients.Add(model);

        SelectedIngredient = "";
        Amount = 0;
        Size = "";
        SuccessMessage = "רכיב נוסף לרשימה!";
    }

    async Task SaveRecipe()
    {
        ErrorMessage = "";
        SuccessMessage = "";
        IsSaving = true;

        try
        {
            if (string.IsNullOrWhiteSpace(RecipeName))
            {
                ErrorMessage = "נא להזין שם מתכון";
                IsSaving = false;
                return;
            }

            if (RecipeIngredients.Count == 0)
            {
                ErrorMessage = "נא להוסיף לפחות רכיב אחד";
                IsSaving = false;
                return;
            }

            RecipeDB db = new RecipeDB();
            Recipes newRecipe = new Recipes();
            newRecipe.UserID = CurrentUserID;
            newRecipe.Name = RecipeName.Trim();
            newRecipe.Story = Story?.Trim();
            newRecipe.RecipeInstructions = Instructions?.Trim();
            newRecipe.ImageURL = ImageBase64;

            Recipes insertedRecipe = await db.InsertGetObjAsync(newRecipe);

            if (insertedRecipe != null && insertedRecipe.RecipeID > 0)
            {
                RecipeIngredientDB riDb = new RecipeIngredientDB();
                IngredientDB ingDB = new IngredientDB();

                for (int i = 0; i < RecipeIngredients.Count; i++)
                {
                    List<Ingredient> found = await ingDB.SearchIngredientsByNameAsync(RecipeIngredients[i].Name);
                    if (found != null && found.Count > 0)
                    {
                        RecipeIngredient ri = new RecipeIngredient();
                        ri.RecipeID = insertedRecipe.RecipeID;
                        ri.IngredientID = found[0].IngredientID;
                        ri.Quantity = RecipeIngredients[i].Amount;
                        ri.Size = RecipeIngredients[i].Size;

                        await riDb.InsertAsync(ri);
                    }
                }

                SuccessMessage = "המתכון נשמר בהצלחה!";
                ResetForm();
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"שגיאה בשמירת המתכון: {ex.Message}";
        }
        finally
        {
            IsSaving = false;
        }
    }

    void ResetForm()
    {
        RecipeName = ""; Story = ""; Instructions = ""; ImageBase64 = "";
        RecipeIngredients.Clear(); SelectedIngredient = ""; Amount = 0; Size = "";
    }

    void GoBack()
    {
        navigationManager.NavigateTo("/AfterLog");
    }

    class RecipeIngredientModel
    {
        public string Name { get; set; }
        public double Amount { get; set; }
        public string Size { get; set; }
    }
}