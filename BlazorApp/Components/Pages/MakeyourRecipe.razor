@page "/makeRecipe"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Microsoft.AspNetCore.Components.Forms
@inject NavigationManager navigationManager
@inject ProtectedSessionStorage Session

<div class="recipe-form-container" dir="rtl">
    <h2>🍳 הוספת מתכון חדש</h2>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger">@ErrorMessage</div>
    }
    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success">@SuccessMessage</div>
    }

    <div class="form-card">
        <div class="form-group">
            <label>שם המתכון:</label>
            <input type="text" class="form-input" @bind="RecipeName" placeholder="שם המתכון" />
        </div>

        <div class="form-group">
            <label>בחר רכיב:</label>
            <select class="form-select" @bind="SelectedIngredient">
                <option value="">-- בחר --</option>
                @for (int i = 0; i < Ingredients.Count; i++)
                {
                    <option value="@Ingredients[i]">@Ingredients[i]</option>
                }
            </select>
        </div>

        <button class="btn-add-new" @onclick="ShowAddIngredient">הוסף רכיב חדש</button>

        @if (AddingNew)
        {
            <div class="new-ingredient-section">
                <label>שם רכיב חדש:</label>
                <input type="text" class="form-input" @bind="NewIngredientName" placeholder="שם הרכיב" />
                <button class="btn-save-ingredient" @onclick="SaveNewIngredient">הוסף רכיב</button>
            </div>
        }

        <div class="ingredient-details">
            <div class="form-group">
                <label>כמות:</label>
                <InputNumber @bind-Value="Amount" class="form-input" step="0.01" min="0" />
            </div>
            <div class="form-group">
                <label>גודל:</label>
                <input type="text" class="form-input" @bind="Size" placeholder="גרם, כפית, כוס..." />
            </div>
            <button class="btn-add-to-list" @onclick="AddToList">הוסף לרשימת המרכיבים</button>
        </div>

        <div class="ingredients-list-section">
            <h3>רשימת רכיבים:</h3>
            @if (RecipeIngredients.Count == 0)
            {
                <p class="no-ingredients">עדיין לא נוספו רכיבים</p>
            }
            else
            {
                <div class="ingredients-list">
                    @for (int i = 0; i < RecipeIngredients.Count; i++)
                    {
                        <div class="ingredient-item">
                            <span>@RecipeIngredients[i].Name - @RecipeIngredients[i].Amount @RecipeIngredients[i].Size</span>
                        </div>
                    }
                </div>
            }
        </div>

        <div class="form-group">
            <label>תמונה:</label>
            <InputFile OnChange="HandleImageUpload" accept="image/*" class="file-input" />
            @if (!string.IsNullOrEmpty(ImageBase64))
            {
                <div class="image-preview">
                    <img src="@ImageBase64" alt="תצוגה מקדימה" />
                </div>
            }
        </div>

        <div class="form-group">
            <label>סיפור המתכון:</label>
            <textarea class="form-textarea" @bind="Story" rows="4" placeholder="ספר את הסיפור מאחורי המתכון..."></textarea>
        </div>

        <div class="form-group">
            <label>הוראות הכנה:</label>
            <textarea class="form-textarea" @bind="Instructions" rows="6" placeholder="תאר את שלבי ההכנה..."></textarea>
        </div>

        <div class="action-buttons">
            <button class="btn-back" @onclick="GoBack">חזרה לדף הבית</button>
            @if (IsSaving)
            {
                <button class="btn-save" disabled>שומר...</button>
            }
            else
            {
                <button class="btn-save" @onclick="SaveRecipe">שמור מתכון</button>
            }
        </div>
    </div>
</div>

