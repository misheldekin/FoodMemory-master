@page "/makeRecipe"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Microsoft.AspNetCore.Components.Forms
@inject NavigationManager Navigation
@inject ProtectedSessionStorage Session

<div class="recipe-form-container" dir="rtl">
    <button class="back-btn" @onclick="GoBack">← חזרה</button>

    <h2>🍳 הוספת מתכון חדש</h2>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger">@ErrorMessage</div>
    }

    @if (showSuccessToast)
    {
        <div class="toast-notification">
            <span class="toast-icon">✓</span>
            <span class="toast-message">המתכון נשמר בהצלחה!</span>
        </div>
    }

    <div class="form-card">
        <!-- שם המתכון -->
        <div class="form-group">
            <label>שם המתכון</label>
            <input type="text" class="form-input" @bind="RecipeName" placeholder="שם המתכון" />
        </div>

        <!-- בחירת רכיב -->
        <div class="ingredients-selection">
            <h3>🥗 הוספת רכיבים</h3>

            <div class="form-group">
                <label>חיפוש רכיב</label>
                <input type="text" class="form-input search-input" @bind="searchTerm" @bind:event="oninput" placeholder="🔍 חפש רכיב..." />
            </div>

            <div class="form-group">
                <label>בחר רכיב</label>
                <select class="form-select" @bind="SelectedIngredient">
                    <option value="">-- בחר רכיב --</option>
                    @for (int i = 0; i < GetFilteredIngredients().Count; i++)
                    {
                        <option value="@GetFilteredIngredients()[i]">@GetFilteredIngredients()[i]</option>
                    }
                </select>
            </div>

            <button class="btn-add-new-ingredient" @onclick="ShowAddIngredient">➕ הוסף רכיב חדש למערכת</button>

            @if (AddingNew)
            {
                <div class="new-ingredient-box">
                    <label>שם רכיב חדש</label>
                    <input type="text" class="form-input" @bind="NewIngredientName" placeholder="שם הרכיב החדש" />
                    <div class="new-ingredient-buttons">
                        <button class="btn-save-new" @onclick="SaveNewIngredient">💾 שמור</button>
                        <button class="btn-cancel-new" @onclick="CancelAddNew">❌ ביטול</button>
                    </div>
                </div>
            }

            <div class="amount-size-grid">
                <div class="form-group">
                    <label>כמות</label>
                    <input type="text" class="form-input" @bind="AmountInput" placeholder="לדוגמה: 0.5, 1, 2.5" />
                </div>
                <div class="form-group">
                    <label>יחידה</label>
                    <input type="text" class="form-input" @bind="Size" placeholder="גרם, כפית, כוס..." />
                </div>
            </div>

            <button class="btn-add-to-list" @onclick="AddToList">
                ➕ הוסף לרשימת המרכיבים
            </button>
        </div>

        <!-- רשימת רכיבים -->
        <div class="ingredients-list-section">
            <h3>📋 רכיבים שנוספו (@RecipeIngredients.Count)</h3>
            @if (RecipeIngredients.Count == 0)
            {
                <p class="no-ingredients">עדיין לא הוספת רכיבים למתכון 🍽️</p>
            }
            else
            {
                <div class="ingredients-list">
                    @for (int i = 0; i < RecipeIngredients.Count; i++)
                    {
                        int index = i;
                        <div class="ingredient-item">
                            <div class="ingredient-content">
                                <span class="ingredient-number">@(index + 1)</span>
                                <span class="ingredient-text">@RecipeIngredients[index].Name - @RecipeIngredients[index].Amount @RecipeIngredients[index].Size</span>
                            </div>
                            <button class="delete-btn" @onclick="@(() => RemoveIngredient(index))">
                                🗑️ הסר
                            </button>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- תמונה -->
        <div class="form-group">
            <label>תמונת המתכון</label>
            <InputFile OnChange="HandleImageUpload" accept="image/*" class="file-input" />
            @if (!string.IsNullOrEmpty(ImageBase64))
            {
                <div class="image-preview">
                    <img src="@ImageBase64" alt="תצוגה מקדימה" />
                </div>
            }
        </div>

        <!-- סיפור -->
        <div class="form-group">
            <label>הסיפור מאחורי המתכון</label>
            <textarea class="form-textarea" @bind="Story" rows="4" placeholder="ספר את הסיפור..."></textarea>
        </div>

        <!-- הוראות -->
        <div class="form-group">
            <label>הוראות הכנה</label>
            <textarea class="form-textarea" @bind="Instructions" rows="6" placeholder="תאר את שלבי ההכנה..."></textarea>
        </div>

        <!-- כפתורים -->
        <div class="action-buttons">
            <button class="btn-cancel" @onclick="GoBack">ביטול</button>
            @if (IsSaving)
            {
                <button class="btn-save" disabled>שומר...</button>
            }
            else
            {
                <button class="btn-save" @onclick="SaveRecipe">💾 שמור מתכון</button>
            }
        </div>
    </div>
</div>

