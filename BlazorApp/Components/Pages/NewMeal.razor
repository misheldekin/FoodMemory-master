@code {
    List<Recipes> allRecipes;
    List<int> selectedRecipeIds = new List<int>();
    string mealName = "";
    string searchTerm = "";
    string errorMessage = "";
    bool showSuccessToast = false;
    bool isSaving = false;
    int currentUserId;

    protected override async Task OnInitializedAsync()
    {
        ProtectedBrowserStorageResult<int> userIdResult = await Session.GetAsync<int>("customerid");
        if (!userIdResult.Success)
        {
            Nav.NavigateTo("/login");
            return;
        }

        currentUserId = userIdResult.Value;

        RecipeDB recipeDB = new RecipeDB();
        allRecipes = await recipeDB.GetAllAsync();
    }

    List<Recipes> GetFilteredRecipes()
    {
        if (allRecipes == null)
            return new List<Recipes>();

        if (string.IsNullOrWhiteSpace(searchTerm))
            return allRecipes;

        List<Recipes> filtered = new List<Recipes>();
        for (int i = 0; i < allRecipes.Count; i++)
        {
            if (allRecipes[i].Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
            {
                filtered.Add(allRecipes[i]);
            }
        }
        return filtered;
    }

    bool IsRecipeSelected(int recipeId)
    {
        for (int i = 0; i < selectedRecipeIds.Count; i++)
        {
            if (selectedRecipeIds[i] == recipeId)
                return true;
        }
        return false;
    }

    void ToggleRecipe(int recipeId)
    {
        if (IsRecipeSelected(recipeId))
        {
            RemoveRecipe(recipeId);
        }
        else
        {
            selectedRecipeIds.Add(recipeId);
        }
    }

    void RemoveRecipe(int recipeId)
    {
        for (int i = 0; i < selectedRecipeIds.Count; i++)
        {
            if (selectedRecipeIds[i] == recipeId)
            {
                selectedRecipeIds.RemoveAt(i);
                break;
            }
        }
    }

    string GetRecipeName(int recipeId)
    {
        for (int i = 0; i < allRecipes.Count; i++)
        {
            if (allRecipes[i].RecipeID == recipeId)
                return allRecipes[i].Name;
        }
        return "לא ידוע";
    }

    async Task SaveMeal()
    {
        errorMessage = "";
        showSuccessToast = false;

        if (string.IsNullOrWhiteSpace(mealName))
        {
            errorMessage = "נא להזין שם לארוחה";
            return;
        }

        if (selectedRecipeIds.Count == 0)
        {
            errorMessage = "נא לבחור לפחות מתכון אחד";
            return;
        }

        isSaving = true;

        try
        {
            MealsDB mealsDB = new MealsDB();
            Meals newMeal = new Meals();
            newMeal.userID = currentUserId;
            newMeal.name = mealName.Trim();

            Meals insertedMeal = await mealsDB.InsertGetObjAsync(newMeal);

            if (insertedMeal == null || insertedMeal.mealID <= 0)
            {
                errorMessage = "שגיאה בשמירת הארוחה";
                return;
            }

            MealRecipeDB mealRecipeDB = new MealRecipeDB();

            for (int i = 0; i < selectedRecipeIds.Count; i++)
            {
                MealRecipe mr = new MealRecipe();
                mr.MealID = insertedMeal.mealID;
                mr.RecipeID = selectedRecipeIds[i];

                int result = await mealRecipeDB.InsertAsync(mr);
            }

            showSuccessToast = true;
            StateHasChanged();

            await Task.Delay(3000);
            showSuccessToast = false;

            mealName = "";
            selectedRecipeIds.Clear();
        }
        catch (Exception ex)
        {
            errorMessage = $"שגיאה: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    void GoBack()
    {
        Nav.NavigateTo("/AfterLog");
    }
}