@page "/CreateMeal"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Session
@inject NavigationManager Nav

<div class="meal-container" dir="rtl">
    <button class="back-btn" @onclick="GoBack">← חזרה</button>

    <h2>🍽️ יצירת ארוחה חדשה</h2>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-alert">@errorMessage</div>
    }

    @if (showSuccessToast)
    {
        <div class="toast-notification">
            <span class="toast-icon">✓</span>
            <span class="toast-message">הארוחה נשמרה בהצלחה!</span>
        </div>
    }

    @if (allRecipes == null)
    {
        <p class="loading">טוען מתכונים...</p>
    }
    else
    {
        <div class="form-card">
            <!-- שם הארוחה -->
            <div class="form-group">
                <label>שם הארוחה</label>
                <input type="text" class="form-input" @bind="mealName" placeholder="לדוגמה: ארוחת בוקר, ארוחת שישי..." />
            </div>

            <!-- בחירת מתכונים -->
            <div class="recipes-section">
                <h3>🥘 בחר מתכונים לארוחה</h3>

                <div class="search-box">
                    <input type="text" class="search-input" @bind="searchTerm" @bind:event="oninput" placeholder="🔍 חפש מתכון..." />
                </div>

                <div class="recipes-grid">
                    @for (int i = 0; i < GetFilteredRecipes().Count; i++)
                    {
                        int index = i;
                        Recipes recipe = GetFilteredRecipes()[index];
                        bool isSelected = IsRecipeSelected(recipe.RecipeID);

                        <div class="recipe-card @(isSelected ? "selected" : "")" @onclick="@(() => ToggleRecipe(recipe.RecipeID))">
                            <div class="recipe-image">
                                <img src="@(string.IsNullOrEmpty(recipe.ImageURL) ? "/images/defultpic.jpg" : recipe.ImageURL)" alt="@recipe.Name" />
                                @if (isSelected)
                                {
                                    <div class="selected-badge">✓</div>
                                }
                            </div>
                            <div class="recipe-info">
                                <h4>@recipe.Name</h4>
                            </div>
                        </div>
                    }
                </div>

                @if (GetFilteredRecipes().Count == 0)
                {
                    <p class="no-results">לא נמצאו מתכונים 🔍</p>
                }
            </div>

            <!-- מתכונים שנבחרו -->
            @if (selectedRecipeIds.Count > 0)
            {
                <div class="selected-recipes-section">
                    <h3>✅ מתכונים שנבחרו (@selectedRecipeIds.Count)</h3>
                    <div class="selected-list">
                        @for (int i = 0; i < selectedRecipeIds.Count; i++)
                        {
                            int recipeId = selectedRecipeIds[i];
                            string recipeName = GetRecipeName(recipeId);
                            int index = i;

                            <div class="selected-item">
                                <span>@recipeName</span>
                                <button class="remove-btn" @onclick="@(() => RemoveRecipe(recipeId))">❌</button>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- כפתורי שמירה -->
            <div class="action-buttons">
                <button class="btn-cancel" @onclick="GoBack">ביטול</button>
                @if (isSaving)
                {
                    <button class="btn-save" disabled>שומר...</button>
                }
                else
                {
                    <button class="btn-save" @onclick="SaveMeal">💾 שמור ארוחה</button>
                }
            </div>
        </div>
    }
</div>

