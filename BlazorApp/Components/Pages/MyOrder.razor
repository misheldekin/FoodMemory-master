@code {
    List<Order> Orders;
    List<Order> FilteredOrders;
    string SelectedFilter = "All";
    int CurrentUserId;

    protected override async Task OnInitializedAsync()
    {
        ProtectedBrowserStorageResult<int> userIdResult = await Session.GetAsync<int>("customerid");
        if (!userIdResult.Success)
        {
            Nav.NavigateTo("/Login");
            return;
        }

        CurrentUserId = userIdResult.Value;
        await LoadOrders();
    }

    async Task LoadOrders()
    {
        OrderDB orderDB = new OrderDB();
        Orders = await orderDB.GetOrdersByCustomerAsync(CurrentUserId);

        if (Orders == null)
        {
            Orders = new List<Order>();
        }

        FilterOrders("All");
    }

    void FilterOrders(string status)
    {
        SelectedFilter = status;

        if (status == "All")
        {
            FilteredOrders = new List<Order>();
            for (int i = 0; i < Orders.Count; i++)
            {
                FilteredOrders.Add(Orders[i]);
            }
        }
        else
        {
            FilteredOrders = new List<Order>();
            for (int i = 0; i < Orders.Count; i++)
            {
                if (Orders[i].Status == status)
                {
                    FilteredOrders.Add(Orders[i]);
                }
            }
        }
    }

    int GetCountByStatus(string status)
    {
        int count = 0;
        for (int i = 0; i < Orders.Count; i++)
        {
            if (Orders[i].Status == status)
            {
                count++;
            }
        }
        return count;
    }

    string GetStatusEmoji(string status)
    {
        return status switch
        {
            "Pending" => "⏳",
            "Approved" => "✅",
            "Rejected" => "❌",
            "Completed" => "🎉",
            _ => "❓"
        };
    }

    string GetStatusText(string status)
    {
        return status switch
        {
            "Pending" => "ממתינה לאישור",
            "Approved" => "אושרה",
            "Rejected" => "נדחתה",
            "Completed" => "הושלמה",
            _ => "לא ידוע"
        };
    }

    void ViewOrderDetails(int orderId)
    {
        Nav.NavigateTo($"/OrderDetails/{orderId}");
    }

    async Task CancelOrder(int orderId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "האם בטוח שברצונך לבטל את ההזמנה?");

        if (confirmed)
        {
            OrderDB orderDB = new OrderDB();
            int result = await orderDB.UpdateStatusAsync(orderId, "Cancelled");

            if (result > 0)
            {
                await LoadOrders();
            }
        }
    }

    void GoToCreateOrder()
    {
        Nav.NavigateTo("/CreateOrder");
    }

    void GoBack()
    {
        Nav.NavigateTo("/AfterLog");
    }

    // בדיקה אם ניתן לדרג את השף
    bool CanRateOrder(Order order)
    {
        return order.Status == "Completed" && (DateTime.Now - order.DeliveryDate).TotalDays >= 1;
    }

    // מעבר לדף דירוג השף
    void RateChefOrder(int orderId)
    {
        Nav.NavigateTo($"/RateChef/{orderId}");
    }
}
