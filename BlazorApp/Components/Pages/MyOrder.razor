@page "/MyOrders"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Session
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="page-container" dir="rtl">
    <button class="back-btn" @onclick="GoBack">← חזרה</button>

    <h2>ההזמנות שלי 📦</h2>

    @if (Orders == null)
    {
        <p class="status">טוען הזמנות...</p>
    }
    else if (Orders.Count == 0)
    {
        <div class="empty-box">
            <div class="emoji">📭</div>
            <p>עדיין לא הזמנת אצל שף</p>
            <button class="btn primary" @onclick="GoToCreateOrder">➕ צור הזמנה חדשה</button>
        </div>
    }
    else
    {
        <div class="orders-section">
            <button class="btn primary" @onclick="GoToCreateOrder">➕ הזמנה חדשה</button>

            <div class="filter-buttons">
                <button class="filter-btn @(SelectedFilter == "All" ? "active" : "")"
                        @onclick="@(() => FilterOrders("All"))">
                    הכל (@Orders.Count)
                </button>
                <button class="filter-btn @(SelectedFilter == "Pending" ? "active" : "")"
                        @onclick="@(() => FilterOrders("Pending"))">
                    ⏳ ממתינה (@GetCountByStatus("Pending"))
                </button>
                <button class="filter-btn @(SelectedFilter == "Approved" ? "active" : "")"
                        @onclick="@(() => FilterOrders("Approved"))">
                    ✅ אושרה (@GetCountByStatus("Approved"))
                </button>
                <button class="filter-btn @(SelectedFilter == "Rejected" ? "active" : "")"
                        @onclick="@(() => FilterOrders("Rejected"))">
                    ❌ נדחתה (@GetCountByStatus("Rejected"))
                </button>
                <button class="filter-btn @(SelectedFilter == "Completed" ? "active" : "")"
                        @onclick="@(() => FilterOrders("Completed"))">
                    🎉 הושלמה (@GetCountByStatus("Completed"))
                </button>
            </div>

            <div class="orders-grid">
                @for (int i = 0; i < FilteredOrders.Count; i++)
                {
                    int index = i;
                    Order order = FilteredOrders[index];

                    <div class="order-card">
                        <div class="order-header">
                            <div class="order-info">
                                <h3>@order.CustomerName</h3>
                                <p class="meal-name">🍽️ @order.MealName</p>
                            </div>
                            <div class="order-status">
                                <span class="status-badge @order.Status.ToLower()">
                                    @GetStatusEmoji(order.Status) @GetStatusText(order.Status)
                                </span>
                            </div>
                        </div>

                        <div class="order-details">
                            <div class="detail-row">
                                <span class="label">📅 תאריך:</span>
                                <span class="value">@order.DeliveryDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">🕐 שעה:</span>
                                <span class="value">@order.DeliveryDate.ToString("HH:mm")</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">📍 כתובת:</span>
                                <span class="value">@order.DeliveryAddress</span>
                            </div>
                        </div>

                        <div class="order-actions">
                            <button class="btn-view" @onclick="@(() => ViewOrderDetails(order.OrderID))">
                                👁️ צפה בפרטים
                            </button>

                            @if (order.Status == "Pending")
                            {
                                <button class="btn-cancel" @onclick="@(() => CancelOrder(order.OrderID))">
                                    ❌ בטל הזמנה
                                </button>
                            }

                            @* כפתור דירוג שף *@
                            @if (CanRateOrder(order))
                            {
                                <button class="btn-rate" @onclick="@(() => RateChefOrder(order.OrderID))">
                                    ⭐ דרג את השף
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

