@page "/ChefRegister"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Session
@inject NavigationManager Nav

<div class="chef-register-page" dir="rtl">
    <div class="register-card-aesthetic">
        <div class="card-decoration">🌿</div>

        <div class="header-section">
            <span class="pre-title">הצטרפו לנבחרת שלנו</span>
            <h1>יצירת פרופיל שף</h1>
            <p>התחילו לשתף את הטעמים והסיפורים שלכם עם העולם</p>
        </div>

        <div class="messages-area">
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-error">@ErrorMessage</div>
            }
            @if (!string.IsNullOrEmpty(SuccessMessage))
            {
                <div class="alert alert-success">@SuccessMessage</div>
            }
        </div>

        <div class="form-grid">
            <div class="input-box">
                <label>שם פרטי</label>
                <input type="text" @bind="FirstName" placeholder="" />
            </div>

            <div class="input-box">
                <label>שם משפחה</label>
                <input type="text" @bind="LastName" placeholder="" />
            </div>

            <div class="input-box full">
                <label>אימייל מקצועי</label>
                <input type="email" @bind="Email" placeholder="chef@example.com" />
            </div>

            <div class="input-box half">
                <label>סיסמה</label>
                <input type="password" @bind="Password" placeholder="מינימום 6 תווים" />
            </div>

            <div class="input-box half">
                <label>מספר טלפון</label>
                <input type="tel" @bind="PhoneNumber" placeholder="050-0000000" />
            </div>

            <div class="input-box full">
                <label>שנות ניסיון במטבח</label>
                <div class="range-wrapper">
                    <input type="number" @bind="YearsOfExperience" min="0" />
                    <span class="unit">שנים</span>
                </div>
            </div>

            <div class="input-box full">
                <label>הסיפור הקולינרי שלך (ביו)</label>
                <textarea @bind="Bio" rows="3" placeholder="ספר לנו על המקורות של האוכל שלך..."></textarea>
            </div>
        </div>

        <button class="submit-chef-btn" @onclick="Register" disabled="@IsLoading">
            @if (IsLoading)
            {
                <span class="loader"></span>
            }
            else
            {

                <span>פתח את המטבח שלי ✨</span>
            }
        </button>

        <div class="footer-links">
            <span>כבר חלק מהמשפחה?</span>
            <a href="/ChefLogin">חזרה להתחברות</a>
        </div>
    </div>
</div>

<style>
    :root {
        --sage-green: #7d8e7b;
        --warm-cream: #fdfaf5;
        --deep-wood: #4a3f35;
        --soft-gold: #d4a373;
    }

    .chef-register-page {
        min-height: 100vh;
        background: var(--warm-cream);
        background-image: radial-gradient(#e5e0d8 1px, transparent 1px);
        background-size: 20px 20px; /* רקע נקודות עדין כמו מחברת מתכונים */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        font-family: 'Assistant', sans-serif;
    }

    .register-card-aesthetic {
        background: white;
        width: 100%;
        max-width: 550px;
        padding: 50px;
        border-radius: 30px;
        box-shadow: 0 20px 60px rgba(74, 63, 53, 0.08);
        position: relative;
        overflow: hidden;
    }

    .card-decoration {
        position: absolute;
        top: -10px;
        left: -10px;
        font-size: 3rem;
        opacity: 0.1;
        transform: rotate(-15deg);
    }

    .header-section {
        text-align: center;
        margin-bottom: 40px;
    }

    .pre-title {
        display: block;
        color: var(--soft-gold);
        font-weight: 700;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .header-section h1 {
        color: var(--deep-wood);
        font-size: 2.2rem;
        margin: 5px 0;
        font-weight: 800;
    }

    .header-section p {
        color: #888;
        font-size: 1rem;
    }

    /* Form Grid */
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
    }

    .input-box.full {
        grid-column: span 2;
    }

    .input-box.half {
        grid-column: span 1;
    }

    .input-box label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: var(--deep-wood);
        font-size: 0.95rem;
    }

    .input-box input, .input-box textarea {
        width: 100%;
        padding: 12px 15px;
        border: 1.5px solid #eee;
        border-radius: 12px;
        background: #fafafa;
        transition: 0.3s;
        font-size: 1rem;
        outline: none;
    }

        .input-box input:focus, .input-box textarea:focus {
            border-color: var(--sage-green);
            background: white;
            box-shadow: 0 0 0 4px rgba(125, 142, 123, 0.1);
        }

    .range-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .unit {
        position: absolute;
        left: 15px;
        color: #aaa;
        font-size: 0.8rem;
    }

    /* Button */
    .submit-chef-btn {
        width: 100%;
        padding: 18px;
        background: var(--sage-green);
        color: white;
        border: none;
        border-radius: 15px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: 0.4s;
    }

        .submit-chef-btn:hover {
            background: var(--deep-wood);
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .submit-chef-btn:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

    /* Alerts */
    .alert {
        padding: 12px;
        border-radius: 10px;
        font-size: 0.9rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .alert-error {
        background: #fff5f5;
        color: #c53030;
        border: 1px solid #feb2b2;
    }

    .alert-success {
        background: #f0fff4;
        color: #276749;
        border: 1px solid #9ae6b4;
    }

    .footer-links {
        text-align: center;
        margin-top: 25px;
        font-size: 0.9rem;
        color: #777;
    }

        .footer-links a {
            color: var(--sage-green);
            text-decoration: none;
            font-weight: 700;
            margin-right: 5px;
        }

    /* Loader */
    .loader {
        width: 20px;
        height: 20px;
        border: 3px solid #fff;
        border-bottom-color: transparent;
        border-radius: 50%;
        display: inline-block;
        animation: rotation 1s linear infinite;
    }

    @@keyframes rotation {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    @@media (max-width: 600px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .input-box.full, .input-box.half {
            grid-column: span 1;
        }

        .register-card-aesthetic {
            padding: 30px 20px;
        }
    }
</style>

@code {
    // השארתי את הלוגיקה שלך בדיוק כפי שהייתה כי היא עובדת מעולה
    private string FirstName = "";
    private string LastName = "";
    private string Email = "";
    private string Password = "";
    private string PhoneNumber = "";
    private int YearsOfExperience = 0;
    private string Bio = "";
    private string ErrorMessage = "";
    private string SuccessMessage = "";
    private bool IsLoading = false;

    async Task Register()
    {
        if (string.IsNullOrWhiteSpace(FirstName) || string.IsNullOrWhiteSpace(LastName) ||
            string.IsNullOrWhiteSpace(Email) || string.IsNullOrWhiteSpace(Password) ||
            string.IsNullOrWhiteSpace(PhoneNumber))
        {
            ErrorMessage = "שדות חובה חסרים. המטבח זקוק לפרטים שלך!";
            return;
        }

        if (Password.Length < 6)
        {
            ErrorMessage = "הסיסמה צריכה להיות קצת יותר חזקה (מינימום 6 תווים)";
            return;
        }

        IsLoading = true;
        ErrorMessage = "";
        SuccessMessage = "";

        try
        {
            Chef newChef = new Chef
            {
                FirstName = FirstName,
                LastName = LastName,
                Email = Email,
                Password = Password,
                PhoneNumber = PhoneNumber,
                YearsOfExperience = YearsOfExperience,
                Bio = Bio,
                Rating = 0,
                ProfileImage = ""
            };

            ChefDB chefDB = new ChefDB();
            Chef registeredChef = await chefDB.InsertGetObjAsync(newChef);

            if (registeredChef != null)
            {
                SuccessMessage = "ברוכים הבאים למשפחה! מיד נעבור להתחברות...";
                await Task.Delay(2000);
                Nav.NavigateTo("/ChefLogin");
            }
            else
            {
                ErrorMessage = "משהו השתבש ברישום. נסו שוב?";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"שגיאה בלתי צפויה: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }
}