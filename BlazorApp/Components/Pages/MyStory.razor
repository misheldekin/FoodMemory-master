        background: #ffebee;
        color: #c62828;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
        border: 1px solid #ef5350;
        text-align: center;
    }
</style>

@code {
    [Parameter]
    public int RecipeID { get; set; }

    private Recipes Recipe { get; set; }
    private List<DisplayRecipeIngredientModel> DisplayIngredients = new List<DisplayRecipeIngredientModel>();
    private bool IsLoading = true;
    private string ErrorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            IsLoading = true;
            ErrorMessage = "";
            Recipe = null;
            DisplayIngredients.Clear();

            if (RecipeID <= 0)
            {
                ErrorMessage = "מזהה מתכון לא תקין.";
                return;
            }

            RecipeDB recipeDb = new RecipeDB();
            Recipe = await recipeDb.SelectByPkAsync(RecipeID);

            if (Recipe == null)
            {
                ErrorMessage = "המתכון לא נמצא במסד הנתונים.";
                return;
            }

            RecipeIngredientDB riDb = new RecipeIngredientDB();
            List<RecipeIngredient> recipeIngredients = await riDb.GetByRecipeAsync(RecipeID);

            if (recipeIngredients != null)
            {
                IngredientDB ingDb = new IngredientDB();

                for (int i = 0; i < recipeIngredients.Count; i++)
                {
                    RecipeIngredient ri = recipeIngredients[i];

                    Ingredient ing = await ingDb.SelectByPkAsync(ri.IngredientID);

                    if (ing != null)
                    {
                        DisplayIngredients.Add(new DisplayRecipeIngredientModel
                        {
                            Name = ing.IngredientName,
                            Amount = (int)ri.Quantity,
                            Size = ri.Size
                        });
                    }
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error fetching recipe: {ex.Message}");
            ErrorMessage = $"שגיאה בטעינת המתכון: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private IEnumerable<string> GetInstructionsSteps(string instructions)
    {
        if (string.IsNullOrWhiteSpace(instructions))
        {
            return Enumerable.Empty<string>();
        }

        string[] stepsArray = instructions.Split(new[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);

        List<string> steps = new List<string>();
        for (int i = 0; i < stepsArray.Length; i++)
        {
            string step = stepsArray[i].Trim();
            if (!string.IsNullOrWhiteSpace(step))
            {
                steps.Add(step);
            }
        }

        if (steps.Count == 0 && !string.IsNullOrWhiteSpace(instructions))
        {
            return new List<string> { instructions.Trim() };
        }

        return steps;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/AfterLog");
    }

    private class DisplayRecipeIngredientModel
    {
        public string Name { get; set; }
        public double Amount { get; set; }
        public string Size { get; set; }
    }
}