@page "/MyMeals"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Session
@inject NavigationManager Nav

<div class="page-container" dir="rtl">
    <button class="back-btn" @onclick="GoBack">
        ← חזרה
    </button>

    <h2>🍽️ הארוחות שלי</h2>

    @if (Meals == null)
    {
        <p class="loading">טוען ארוחות...</p>
    }
    else if (Meals.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon">🍽️</div>
            <p class="empty-text">עדיין לא הוספת ארוחות</p>
            <button class="btn-add-meal" @onclick="GoToCreateMeal">➕ צור ארוחה חדשה</button>
        </div>
    }
    else
    {
        <div class="meals-grid">
            @for (int i = 0; i < Meals.Count; i++)
            {
                int currentIndex = i;
                <div class="meal-card" @onclick="@(() => OpenMeal(Meals[currentIndex].mealID))">
                    <div class="meal-header">
                        <div class="meal-icon">🍽️</div>
                        <h3 class="meal-name">@Meals[currentIndex].name</h3>
                    </div>
                    <div class="meal-footer">
                        <span class="view-text">👁️ לחץ לצפייה</span>
                        <span class="arrow">←</span>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap');

    * {
        font-family: 'Rubik', 'Assistant', sans-serif;
        box-sizing: border-box;
    }

    .page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        direction: rtl;
        position: relative;
        min-height: 100vh;
    }

    .back-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        background: linear-gradient(135deg, #737A5D 0%, #414833 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(65, 72, 51, 0.3);
        transition: all 0.3s ease;
        z-index: 100;
    }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(65, 72, 51, 0.4);
            background: linear-gradient(135deg, #A4AC86 0%, #737A5D 100%);
        }

    h2 {
        text-align: center;
        margin: 60px 0 40px 0;
        color: #414833;
        font-weight: 700;
        font-size: 2.5rem;
    }

    .loading {
        text-align: center;
        color: #737A5D;
        font-size: 1.3rem;
        margin-top: 100px;
    }

    .empty-state {
        text-align: center;
        margin-top: 100px;
        padding: 60px 20px;
        background: rgba(235, 227, 210, 0.5);
        border-radius: 20px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 20px;
        opacity: 0.6;
    }

    .empty-text {
        color: #737A5D;
        font-size: 1.3rem;
        margin-bottom: 30px;
    }

    .btn-add-meal {
        background: linear-gradient(135deg, #737A5D 0%, #414833 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 15px 30px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 6px 18px rgba(65, 72, 51, 0.35);
        transition: all 0.3s ease;
    }

        .btn-add-meal:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(65, 72, 51, 0.45);
        }

    .meals-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 25px;
        padding: 20px;
    }

    .meal-card {
        background: linear-gradient(135deg, rgba(235, 227, 210, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
        border-radius: 20px;
        padding: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid rgba(164, 172, 134, 0.3);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        position: relative;
        overflow: hidden;
    }

        .meal-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(115, 122, 93, 0.1) 0%, transparent 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .meal-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(65, 72, 51, 0.2);
            border-color: #737A5D;
        }

            .meal-card:hover::before {
                opacity: 1;
            }

    .meal-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    .meal-icon {
        background: linear-gradient(135deg, #737A5D 0%, #414833 100%);
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        box-shadow: 0 4px 12px rgba(65, 72, 51, 0.3);
        transition: transform 0.3s ease;
    }

    .meal-card:hover .meal-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .meal-name {
        flex: 1;
        color: #414833;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
        word-break: break-word;
    }

    .meal-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 15px;
        border-top: 2px solid rgba(164, 172, 134, 0.3);
        position: relative;
        z-index: 1;
    }

    .view-text {
        color: #737A5D;
        font-weight: 600;
        font-size: 1rem;
    }

    .arrow {
        color: #737A5D;
        font-size: 1.5rem;
        transition: transform 0.3s ease;
    }

    .meal-card:hover .arrow {
        transform: translateX(-5px);
    }

    @@media (max-width: 768px) {
        .back-btn {
            position: static;
            display: block;
            margin: 20px auto;
            width: fit-content;
        }

        h2 {
            margin-top: 20px;
        }

        .meals-grid {
            grid-template-columns: 1fr;
        }

        .meal-card {
            padding: 25px;
        }

        .meal-name {
            font-size: 1.3rem;
        }
    }
</style>

@code {
    List<Meals> Meals;

    protected override async Task OnInitializedAsync()
    {
        ProtectedBrowserStorageResult<int> userIdResult = await Session.GetAsync<int>("customerid");
        if (!userIdResult.Success)
        {
            Nav.NavigateTo("/AfterLog");
            return;
        }

        int userId = userIdResult.Value;
        MealsDB mealDB = new MealsDB();
        Meals = await mealDB.GetMealsByUserAsync(userId);
    }

    void OpenMeal(int mealId)
    {
        Nav.NavigateTo($"/Meal/{mealId}");
    }

    void GoToCreateMeal()
    {
        Nav.NavigateTo("/CreateMeal");
    }

    void GoBack()
    {
        Nav.NavigateTo("/AfterLog");
    }
}