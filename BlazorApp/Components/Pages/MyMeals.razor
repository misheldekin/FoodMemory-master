@page "/MyMeals"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Session
@inject NavigationManager Nav

<div class="page" dir="rtl">

    <div class="top-bar">
        <button class="btn secondary" @onclick="GoBack">← חזרה</button>
        <h1>הארוחות שלי 🍽️</h1>
        <button class="btn primary" @onclick="GoToCreateMeal">➕ ארוחה חדשה</button>
    </div>

    @if (Meals == null)
    {
        <p class="status">טוען ארוחות...</p>
    }
    else if (Meals.Count == 0)
    {
        <div class="empty-box">
            <div class="emoji">🍽️</div>
            <p>עדיין לא הוספת ארוחות</p>
            <button class="btn primary" @onclick="GoToCreateMeal">➕ צור ארוחה</button>
        </div>
    }
    else
    {
        <div class="cards">
            @for (int i = 0; i < Meals.Count; i++)
            {
                int currentIndex = i;
                <div class="card" @onclick="@(() => OpenMeal(Meals[currentIndex].mealID))">
                    <div class="card-icon">🍽️</div>
                    <h3>@Meals[currentIndex].name</h3>
                    <span class="open">לחץ לצפייה ←</span>

                </div>
            }
        </div>
    }

</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap');

    * {
        font-family: 'Rubik', sans-serif;
        box-sizing: border-box;
    }

    .page {
        max-width: 1200px;
        margin: auto;
        padding: 30px 20px;
    }

    .top-bar {
        display: grid;
        grid-template-columns: auto 1fr auto;
        align-items: center;
        margin-bottom: 40px;
    }

        .top-bar h1 {
            text-align: center;
            margin: 0;
            font-size: 2.2rem;
            color: #414833;
        }

    .btn {
        border: none;
        border-radius: 14px;
        padding: 12px 22px;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
    }

    .primary {
        background: linear-gradient(135deg, #737A5D, #414833);
        color: white;
    }

    .secondary {
        background: #eaeaea;
        color: #414833;
    }

    .btn:hover {
        transform: translateY(-2px);
        opacity: 0.9;
    }

    .status {
        text-align: center;
        font-size: 1.3rem;
        color: #737A5D;
        margin-top: 80px;
    }

    .empty-box {
        background: #f3efe7;
        border-radius: 22px;
        padding: 60px 25px;
        max-width: 420px;
        margin: 100px auto;
        text-align: center;
    }

        .empty-box .emoji {
            font-size: 4rem;
            margin-bottom: 15px;
        }

        .empty-box p {
            font-size: 1.2rem;
            margin-bottom: 25px;
        }

    .cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 25px;
    }

    .card {
        background: white;
        border-radius: 22px;
        padding: 30px 20px;
        text-align: center;
        cursor: pointer;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        transition: 0.3s;
        border: 2px solid transparent;
    }

        .card:hover {
            transform: translateY(-6px);
            border-color: #737A5D;
        }

    .card-icon {
        width: 60px;
        height: 60px;
        margin: auto;
        background: #737A5D;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    .card h3 {
        margin: 10px 0;
        font-size: 1.4rem;
        color: #414833;
    }

    .open {
        font-size: 0.95rem;
        color: #737A5D;
        font-weight: 500;
    }

    @@media (max-width: 768px) {
        .top-bar {
            grid-template-columns: 1fr;
            gap: 15px;
        }

            .top-bar h1 {
                order: -1;
            }
    }
</style>


@code {
    List<Meals> Meals;

    protected override async Task OnInitializedAsync()
    {
        ProtectedBrowserStorageResult<int> userIdResult = await Session.GetAsync<int>("customerid");
        if (!userIdResult.Success)
        {
            Nav.NavigateTo("/AfterLog");
            return;
        }

        int userId = userIdResult.Value;
        MealsDB mealDB = new MealsDB();
        Meals = await mealDB.GetMealsByUserAsync(userId);
    }

    void OpenMeal(int mealId)
    {
        Nav.NavigateTo($"/Meal/{mealId}");
    }

    void GoToCreateMeal()
    {
        Nav.NavigateTo("/CreateMeal");
    }

    void GoBack()
    {
        Nav.NavigateTo("/AfterLog");
    }
}