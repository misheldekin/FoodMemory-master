@page "/CreateOrder"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Session
@inject NavigationManager Nav

<div class="order-container" dir="rtl">
    <button class="back-btn" @onclick="GoBack">← חזרה</button>

    <h2>📦 יצירת הזמנה חדשה</h2>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-alert">@errorMessage</div>
    }

    @if (showSuccessToast)
    {
        <div class="toast-notification">
            <span class="toast-icon">✓</span>
            <span class="toast-message">ההזמנה נוצרה בהצלחה!</span>
        </div>
    }

    @if (allChefs == null || allMeals == null)
    {
        <p class="loading">טוען נתונים...</p>
    }
    else
    {
        <div class="form-card">
            <!-- בחירת שף -->
            <div class="form-group">
                <label>בחר שף</label>
                <select class="form-select" @bind="selectedChefId">
                    <option value="0">-- בחר שף --</option>
                    @foreach (var chef in allChefs)
                    {
                        <option value="@chef.ChefID">@chef.FirstName @chef.LastName - ⭐ @chef.Rating.ToString("F1")</option>
                    }
                </select>
                @if (selectedChefId > 0)
                {
                    <div class="chef-details">
                        <p class="chef-info">@GetChefDetails()</p>
                    </div>
                }
            </div>

            <!-- בחירת ארוחה -->
            <div class="form-group">
                <label>בחר ארוחה</label>
                <select class="form-select" @bind="selectedMealId">
                    <option value="0">-- בחר ארוחה --</option>
                    @foreach (var meal in allMeals)
                    {
                        <option value="@meal.mealID">@meal.name</option>
                    }
                </select>
            </div>

            <!-- תאריך הזמנה -->
            <div class="form-group">
                <label>תאריך וזמן הזמנה</label>
                <input type="datetime-local" class="form-input" @bind="deliveryDateTime" />
                @if (IsDateInPast())
                {
                    <p class="warning-text">⚠️ יש לבחור תאריך עתידי</p>
                }
            </div>

            <!-- כתובת -->
            <div class="form-group">
                <label>כתובת משלוח</label>
                <textarea class="form-textarea" @bind="deliveryAddress" placeholder="הכנס את כתובת המשלוח המלאה..."></textarea>
            </div>

            <!-- כפתורים -->
            <div class="action-buttons">
                <button class="btn-cancel" @onclick="GoBack">ביטול</button>
                @if (isSubmitting)
                {
                    <button class="btn-submit" disabled>שומר...</button>
                }
                else
                {
                    <button class="btn-submit" @onclick="CreateOrder">📦 צור הזמנה</button>
                }
            </div>
        </div>
    }
</div>

<style>
