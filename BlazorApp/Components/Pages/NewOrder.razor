@page "/CreateOrder"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Session
@inject NavigationManager Nav

<div class="order-container" dir="rtl">
    <button class="back-btn" @onclick="GoBack">← חזרה</button>

    <h2>📦 הזמנה חדשה</h2>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-alert">@errorMessage</div>
    }

    @if (showSuccessToast)
    {
        <div class="toast-notification">
            <span class="toast-icon">✓</span>
            <span class="toast-message">ההזמנה נשמרה בהצלחה!</span>
        </div>
    }

    <div class="form-card">
        <!-- בחירת שף -->
        <div class="form-group">
            <label>בחר שף 👨‍🍳</label>
            <select class="form-select" @bind="selectedChefId">
                <option value="0">-- בחר שף --</option>
                @if (allChefs != null)
                {
                    @foreach (var chef in allChefs)
                    {
                        <option value="@chef.ChefID">@chef.FirstName @chef.LastName ⭐ @chef.Rating.ToString("F1")</option>
                    }
                }
            </select>
        </div>

        <!-- בחירת ארוחה -->
        <div class="form-group">
            <label>בחר ארוחה 🍽️</label>
            <select class="form-select" @bind="selectedMealId">
                <option value="0">-- בחר ארוחה --</option>
                @if (allMeals != null)
                {
                    @foreach (var meal in allMeals)
                    {
                        <option value="@meal.mealID">@meal.name</option>
                    }
                }
            </select>
        </div>

        <!-- תאריך ושעה -->
        <div class="form-group">
            <label>תאריך ושעה 📅🕐</label>
            <input type="datetime-local" class="form-input" @bind="selectedDateTime" />
        </div>

        <!-- כתובת -->
        <div class="form-group">
            <label>כתובת למשלוח 📍</label>
            <textarea class="form-textarea" @bind="deliveryAddress" placeholder="הזן את כתובת המשלוח..."></textarea>
        </div>

        <!-- כפתורים -->
        <div class="action-buttons">
            <button class="btn-cancel" @onclick="GoBack">ביטול</button>
            @if (isSaving)
            {
                <button class="btn-save" disabled>שומר...</button>
            }
            else
            {
                <button class="btn-save" @onclick="CreateOrder">📦 צור הזמנה</button>
            }
        </div>
    </div>
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap');

    * {
        font-family: 'Rubik', 'Assistant', sans-serif;
        box-sizing: border-box;
    }

    .order-container {
        max-width: 700px;
        margin: 40px auto;
        padding: 20px;
        direction: rtl;
        position: relative;
    }

    .back-btn {
        position: absolute;
        top: 0;
        right: 20px;
        background: linear-gradient(135deg, #737A5D 0%, #414833 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(65, 72, 51, 0.3);
        transition: all 0.3s ease;
        z-index: 100;
    }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(65, 72, 51, 0.4);
        }

    h2 {
        text-align: center;
        color: #414833;
        font-size: 2.5rem;
        margin: 50px 0 30px 0;
    }

    .error-alert {
        padding: 15px;
        border-radius: 12px;
        margin-bottom: 20px;
        font-weight: 500;
        text-align: center;
        background: #ffe6e6;
        border: 2px solid #ff4444;
        color: #cc0000;
    }

    .toast-notification {
        position: fixed;
        top: 30px;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #737A5D 0%, #414833 100%);
        color: white;
        padding: 15px 30px;
        border-radius: 50px;
        box-shadow: 0 10px 30px rgba(65, 72, 51, 0.4);
        display: flex;
        align-items: center;
        gap: 12px;
        z-index: 1000;
        animation: slideDown 0.4s ease-out, fadeOut 0.3s ease-in 2.7s forwards;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .toast-icon {
        background: white;
        color: #737A5D;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    @@keyframes slideDown {
        from {
            transform: translateX(-50%) translateY(-100px);
            opacity: 0;
        }

        to {
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }
    }

    @@keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
            transform: translateX(-50%) translateY(-20px);
        }
    }

    .form-card {
        background: rgba(235, 227, 210, 0.95);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 15px 40px rgba(65, 72, 51, 0.15);
        border: 2px solid rgba(164, 172, 134, 0.3);
    }

    .form-group {
        margin-bottom: 25px;
    }

    label {
        display: block;
        color: #414833;
        font-weight: 600;
        margin-bottom: 10px;
        font-size: 1.1rem;
    }

    .form-input, .form-select, .form-textarea {
        width: 100%;
        padding: 12px 18px;
        border: 2px solid #A4AC86;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
        direction: rtl;
    }

        .form-input:focus, .form-select:focus, .form-textarea:focus {
            outline: none;
            border-color: #737A5D;
            box-shadow: 0 0 0 4px rgba(115, 122, 93, 0.2);
        }

    .form-textarea {
        resize: vertical;
        min-height: 80px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        justify-content: center;
    }

    .btn-save, .btn-cancel {
        padding: 15px 40px;
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-save {
        background: linear-gradient(135deg, #737A5D 0%, #414833 100%);
        color: white;
        box-shadow: 0 6px 18px rgba(65, 72, 51, 0.35);
    }

        .btn-save:hover:not(:disabled) {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(65, 72, 51, 0.45);
        }

        .btn-save:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .btn-cancel {
        background: #e0e0e0;
        color: #555;
    }

        .btn-cancel:hover {
            background: #d0d0d0;
        }

    @@media (max-width: 768px) {
        .back-btn {
            position: static;
            display: block;
            margin: 0 auto 20px;
            width: fit-content;
        }

        h2 {
            margin-top: 20px;
        }
    }
</style>

@code {
    List<Chef> allChefs;
    List<Meals> allMeals;

    int selectedChefId = 0;
    int selectedMealId = 0;
    DateTime? selectedDateTime = null;
    string deliveryAddress = "";
    string errorMessage = "";
    bool showSuccessToast = false;
    bool isSaving = false;
    int currentUserId;

    protected override async Task OnInitializedAsync()
    {
        ProtectedBrowserStorageResult<int> userIdResult = await Session.GetAsync<int>("customerid");
        if (!userIdResult.Success)
        {
            Nav.NavigateTo("/Login");
            return;
        }

        currentUserId = userIdResult.Value;

        ChefDB chefDB = new ChefDB();
        allChefs = await chefDB.GetAllAsync();

        MealsDB mealsDB = new MealsDB();
        allMeals = await mealsDB.GetMealsByUserAsync(currentUserId);
    }

    async Task CreateOrder()
    {
        errorMessage = "";
        showSuccessToast = false;

        if (selectedChefId == 0)
        {
            errorMessage = "נא לבחור שף";
            return;
        }

        if (selectedMealId == 0)
        {
            errorMessage = "נא לבחור ארוחה";
            return;
        }

        if (selectedDateTime == null)
        {
            errorMessage = "נא לבחור תאריך ושעה";
            return;
        }

        if (string.IsNullOrWhiteSpace(deliveryAddress))
        {
            errorMessage = "נא להזין כתובת משלוח";
            return;
        }

        isSaving = true;

        try
        {
            Order newOrder = new Order
            {
                CustomerID = currentUserId,
                ChefID = selectedChefId,
                MealID = selectedMealId,
                DeliveryDate = selectedDateTime.Value,
                DeliveryAddress = deliveryAddress.Trim(),
                Status = "Pending"
            };

            OrderDB orderDB = new OrderDB();

            // ניסיון עם InsertGetObjAsync
            Order insertedOrder = await orderDB.InsertGetObjAsync(newOrder);

            // אם זה חזר null, נסיון עם שיטה אחרת
            if (insertedOrder == null)
            {
                // אולי זה ממיר ישירות בלי חזרה
                showSuccessToast = true;
                StateHasChanged();
                await Task.Delay(3000);
                Nav.NavigateTo("/MyOrders");
                return;
            }

            showSuccessToast = true;
            StateHasChanged();

            await Task.Delay(3000);
            Nav.NavigateTo("/MyOrders");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"CreateOrder error: {ex.Message}");
            System.Diagnostics.Debug.WriteLine($"Stack trace: {ex.StackTrace}");
            errorMessage = $"שגיאה: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    void GoBack()
    {
        Nav.NavigateTo("/AfterLog");
    }
}
