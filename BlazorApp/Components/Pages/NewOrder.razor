</style>

@code {
    List<Chef> allChefs;
    List<Meals> allMeals;

    int selectedChefId = 0;
    int selectedMealId = 0;
    string deliveryAddress = "";
    DateTime deliveryDateTime = DateTime.Now.AddDays(1);
    string errorMessage = "";
    bool showSuccessToast = false;
    bool isSubmitting = false;
    int currentUserId;

    protected override async Task OnInitializedAsync()
    {
        ProtectedBrowserStorageResult<int> userIdResult = await Session.GetAsync<int>("customerid");
        if (!userIdResult.Success)
        {
            Nav.NavigateTo("/Login");
            return;
        }

        currentUserId = userIdResult.Value;

        ChefDB chefDB = new ChefDB();
        allChefs = await chefDB.GetAllAsync();

        MealsDB mealsDB = new MealsDB();
        allMeals = await mealsDB.GetMealsByUserAsync(currentUserId);

        if (allMeals == null)
        {
            allMeals = new List<Meals>();
        }
    }

    string GetChefDetails()
    {
        Chef selectedChef = null;
        foreach (var chef in allChefs)
        {
            if (chef.ChefID == selectedChefId)
            {
                selectedChef = chef;
                break;
            }
        }

        if (selectedChef == null)
            return "";

        return $"👨‍🍳 {selectedChef.FirstName} {selectedChef.LastName}\n{selectedChef.YearsOfExperience} שנות ניסיון\n📞 {selectedChef.PhoneNumber}";
    }

    bool IsDateInPast()
    {
        return deliveryDateTime < DateTime.Now;
    }

    async Task CreateOrder()
    {
        errorMessage = "";
        showSuccessToast = false;

        if (selectedChefId <= 0)
        {
            errorMessage = "נא לבחור שף";
            return;
        }

        if (selectedMealId <= 0)
        {
            errorMessage = "נא לבחור ארוחה";
            return;
        }

        if (IsDateInPast())
        {
            errorMessage = "יש לבחור תאריך עתידי";
            return;
        }

        if (string.IsNullOrWhiteSpace(deliveryAddress))
        {
            errorMessage = "נא להזין כתובת משלוח";
            return;
        }

        isSubmitting = true;

        try
        {
            Order newOrder = new Order();
            newOrder.CustomerID = currentUserId;
            newOrder.ChefID = selectedChefId;
            newOrder.MealID = selectedMealId;
            newOrder.DeliveryDate = deliveryDateTime;
            newOrder.DeliveryAddress = deliveryAddress.Trim();
            newOrder.Status = "Pending";
            newOrder.OrderDate = DateTime.Now;

            OrderDB orderDB = new OrderDB();
            Order result = await orderDB.InsertGetObjAsync(newOrder);

            if (result != null)
            {
                showSuccessToast = true;
                StateHasChanged();

                await Task.Delay(2000);
                Nav.NavigateTo("/MyOrders");
            }
            else
            {
                errorMessage = "שגיאה בשמירת ההזמנה";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"שגיאה: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    void GoBack()
    {
        Nav.NavigateTo("/MyOrders");
    }
}
