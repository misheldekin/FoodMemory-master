    }
</style>

@code {
    private string CustomerName = "";
    private string profileImage = "/images/defultpic.jpg";
    private List<Recipes> recipes;
    private string SearchRec = "";

    protected override async Task OnInitializedAsync()
    {
        ProtectedBrowserStorageResult<string> resultName = await Session.GetAsync<string>("firstname");
        ProtectedBrowserStorageResult<string> resultProfileImage = await Session.GetAsync<string>("profilepic");

        if (!resultName.Success || string.IsNullOrEmpty(resultName.Value))
        {
            navigationManager.NavigateTo("/Login");
            return;
        }

        CustomerName = resultName.Value;

        if (resultProfileImage.Success && !string.IsNullOrEmpty(resultProfileImage.Value))
        {
            profileImage = resultProfileImage.Value;
        }

        RecipeDB dB = new RecipeDB();
        recipes = await dB.GetAllAsync();
    }

    private async Task SearchBtn()
    {
        RecipeDB dB = new RecipeDB();
        recipes = (List<Recipes>)await dB.SearchRecipesByNameAsync(SearchRec);
        StateHasChanged();
    }

    private async Task NavigateToRecipe(int recipeId)
    {
        try
        {
            // בדיקה אם המשתמש מחובר
            var userIdResult = await Session.GetAsync<int>("customerid");

            // אם מחובר, שמור את AfterLog
            if (userIdResult.Success && userIdResult.Value > 0)
            {
                await Session.SetAsync("previousPage", "/AfterLog");
            }
            else
            {
                await Session.DeleteAsync("previousPage");
            }

            await Task.Delay(100);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error saving previous page: {ex.Message}");
        }
        finally
        {
            navigationManager.NavigateTo($"/Recipe/{recipeId}");
        }
    }

    private void GoToMakeRecipe()
    {
        navigationManager.NavigateTo("/makeRecipe");
    }

    private void GoToProfile()
    {
        navigationManager.NavigateTo("/UpdateProfile");
    }

    private void Logout()
    {
        navigationManager.NavigateTo("/Login");
    }
}
