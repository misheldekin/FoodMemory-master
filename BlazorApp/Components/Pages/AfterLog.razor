@page "/AfterLog"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Session
@inject NavigationManager navigationManager
@using DBL
@using Models

<div class="app-screen">
    <header class="header">
        <div class="header-content">
            <nav class="nav-bar">
                <a href="/AfterLog" class="nav-item">🏠 דף בית</a>
                <a href="/MyRecipes" class="nav-item">🍲 המתכונים שלי</a>
                <a href="/MyMeals" class="nav-item">🍽️ הארוחות שלי</a>
                <a href="/Chefs" class="nav-item">👨‍🍳 שפים</a>
                <a href="/MyOrders" class="nav-item">📦 ההזמנות שלי</a>
            </nav>
            <div class="user-profile" @onclick="GoToProfile" title="עדכון פרופיל">
                <img src="@profileImage" alt="פרופיל" class="profile-icon">
            </div>

            <div class="logout-container">
                <button class="btn btn-danger" @onclick="Logout">
                    התנתקות
                </button>
            </div>


        </div>
    </header>

    <main class="content-wrapper">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-content">
                <h1 class="welcome-title">ברוכה הבאה, @CustomerName</h1>
                <h1>שמרו על זיכרונות משפחתיים דרך אוכל וסיפורים</h1>
                <p class="hero-subtitle">התחברו מחדש לשורשים שלכם</p>

                <div class="cta-buttons">
                    <button class="cta-share" @onclick="GoToMakeRecipe">שתף את הסיפור שלך</button>
                    <button class="cta-find">מצא את השף שלך</button>
                </div>
            </div>
        </section>

        <!-- Search Section -->
        <section class="stories-section">
            <div class="search-container">
                <input @bind="SearchRec"
                       type="text"
                       class="search-input"
                       placeholder="חיפוש מתכון..."
                       autofocus />

                <button @onclick="SearchBtn" class="btn-search" type="button">
                    חיפוש
                </button>
            </div>

            <!-- Recipes List -->
            <h2>סיפורים מרגשים</h2>

            @if (recipes == null || recipes.Count == 0)
            {
                <p>לא נמצאו מתכונים.</p>
            }
            else
            {
                @for (int i = 0; i < recipes.Count; i += 6)
                {
                    <div class="stories-list">
                        @for (int j = i; j < i + 6 && j < recipes.Count; j++)
                        {
                            int currentIndex = j;
                            <div class="story-card-link" @onclick="@(async () => await NavigateToRecipe(recipes[currentIndex].RecipeID))">
                                <div class="story-card">
                                    <img src="@(string.IsNullOrWhiteSpace(recipes[currentIndex].ImageURL) ? "/images/defultpic.jpg" : recipes[currentIndex].ImageURL)" alt="@recipes[currentIndex].Name">
                                    <p>@recipes[currentIndex].Name</p>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </section>


    </main>
</div>

<style>
