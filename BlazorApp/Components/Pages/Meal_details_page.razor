@page "/Meal/{MealId:int}"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Session
@inject NavigationManager Nav

<div class="page-container" dir="rtl">
    <button class="back-btn" @onclick="GoBack">
        ← חזרה
    </button>

    @if (meal == null || mealRecipes == null)
    {
        <p class="loading">טוען ארוחה...</p>
    }
    else
    {
        <div class="meal-header">
            <div class="meal-icon">🍽️</div>
            <h2>@meal.name</h2>
        </div>
        <div class="update-container">
            <button class="btn secondary update-btn" @onclick="EditMeal">✏️ עדכן ארוחה</button>
        </div>

        @if (recipes.Count == 0)
        {
            <div class="empty-state">
                <p>לא נמצאו מתכונים בארוחה זו</p>
            </div>
        }

        else
        {
            <div class="recipes-section">
                <h3>המתכונים בארוחה (@recipes.Count)</h3>
                <div class="recipes-grid">
                    @for (int i = 0; i < recipes.Count; i++)
                    {
                        int currentIndex = i;
                        <div class="recipe-card" @onclick="@(async () => await GoToRecipe(recipes[currentIndex].RecipeID))">
                            <div class="recipe-image">
                                <img src="@(string.IsNullOrEmpty(recipes[currentIndex].ImageURL) ? "/images/defultpic.jpg" : recipes[currentIndex].ImageURL)" alt="@recipes[currentIndex].Name" />
                            </div>
                            <div class="recipe-info">
                                <h4>@recipes[currentIndex].Name</h4>
                                <p class="click-hint">👁️ לחץ לצפייה במתכון</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap');
    * {
        font-family: 'Rubik', 'Assistant', sans-serif;
        box-sizing: border-box;
    }

    .page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        direction: rtl;
        position: relative;
        min-height: 100vh;
    }

    .back-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        background: linear-gradient(135deg, #737A5D 0%, #414833 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(65, 72, 51, 0.3);
        transition: all 0.3s ease;
        z-index: 100;
    }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(65, 72, 51, 0.4);
            background: linear-gradient(135deg, #A4AC86 0%, #737A5D 100%);
        }

    .loading {
        text-align: center;
        color: #737A5D;
        font-size: 1.3rem;
        margin-top: 100px;
    }

    .meal-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        margin: 80px 0 50px 0;
        padding: 30px;
        background: linear-gradient(135deg, rgba(235, 227, 210, 0.8) 0%, rgba(255, 255, 255, 0.6) 100%);
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .meal-icon {
        background: linear-gradient(135deg, #737A5D 0%, #414833 100%);
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        box-shadow: 0 6px 18px rgba(65, 72, 51, 0.3);
    }

    .meal-header h2 {
        color: #414833;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: rgba(235, 227, 210, 0.5);
        border-radius: 20px;
        margin-top: 40px;
    }

        .empty-state p {
            color: #737A5D;
            font-size: 1.2rem;
        }

    .recipes-section {
        margin: 40px 0;
    }

        .recipes-section h3 {
            color: #414833;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
        }

    .recipes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 25px;
        padding: 20px;
    }

    .recipe-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid #f0f0f0;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

        .recipe-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
            border-color: #737A5D;
        }

    .recipe-image {
        width: 100%;
        height: 200px;
        overflow: hidden;
        position: relative;
    }

        .recipe-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    .recipe-card:hover .recipe-image img {
        transform: scale(1.1);
    }

    .recipe-info {
        padding: 20px;
    }

        .recipe-info h4 {
            color: #414833;
            font-size: 1.3rem;
            font-weight: 600;
            margin: 0 0 10px 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    .click-hint {
        color: #737A5D;
        font-size: 0.9rem;
        margin: 0;
        font-weight: 500;
    }

    @@media (max-width: 768px) {
        .back-btn {
            position: static;
            display: block;
            margin: 20px auto;
            width: fit-content;
        }

        .meal-header {
            margin-top: 20px;
            flex-direction: column;
            text-align: center;
        }

            .meal-header h2 {
                font-size: 2rem;
            }

        .recipes-grid {
            grid-template-columns: 1fr;
        }

        .update-btn {
            margin-left: 20px;
            padding: 8px 15px;
            font-size: 0.95rem;
            border-radius: 12px;
            background: #e0d9c6;
            color: #414833;
            border: none;
            cursor: pointer;
            transition: 0.3s;
        }

            .update-btn:hover {
                background: #d4cbb3;
            }
    }

</style>

@code {
    [Parameter]
    public int MealId { get; set; }

    Meals meal;
    List<MealRecipe> mealRecipes;
    List<Recipes> recipes = new List<Recipes>();

    protected override async Task OnInitializedAsync()
    {
        ProtectedBrowserStorageResult<int> userIdResult = await Session.GetAsync<int>("customerid");
        if (!userIdResult.Success)
        {
            Nav.NavigateTo("/login");
            return;
        }

        MealsDB mealsDB = new MealsDB();
        meal = await mealsDB.SelectByPkAsync(MealId);

        if (meal == null || meal.userID != userIdResult.Value)
        {
            Nav.NavigateTo("/MyMeals");
            return;
        }

        MealRecipeDB mealRecipeDB = new MealRecipeDB();
        mealRecipes = await mealRecipeDB.GetByMealAsync(MealId);

        if (mealRecipes != null)
        {
            RecipeDB recipeDB = new RecipeDB();
            for (int i = 0; i < mealRecipes.Count; i++)
            {
                Recipes recipe = await recipeDB.SelectByPkAsync(mealRecipes[i].RecipeID);
                if (recipe != null)
                {
                    recipes.Add(recipe);
                }
            }
        }
    }

    async Task GoToRecipe(int recipeId)
    {
        try
        {
            await Session.SetAsync("previousPage", $"/Meal/{MealId}");
            await Task.Delay(100);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error saving previous page: {ex.Message}");
        }
        finally
        {
            Nav.NavigateTo($"/Recipe/{recipeId}");
        }
    }

    async Task GoBack()
    {
        try
        {
            var previousPageResult = await Session.GetAsync<string>("previousPage");
            if (previousPageResult.Success && !string.IsNullOrEmpty(previousPageResult.Value))
            {
                string previousPage = previousPageResult.Value;
                await Session.DeleteAsync("previousPage");
                Nav.NavigateTo(previousPage);
            }
            else
            {
                Nav.NavigateTo("/MyMeals");
            }
        }
        catch
        {
            Nav.NavigateTo("/MyMeals");
        }
    }

    void EditMeal()
    {
        Nav.NavigateTo($"/EditMeal/{MealId}");
    }
}